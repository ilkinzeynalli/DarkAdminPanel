@model LoginInputModel
@{
    ViewData["Title"] = "Lock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-lg-4 col-md-6 ml-auto mr-auto">
        <form asp-controller="Account" asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <div class="card card-lock card-white text-center">
                <div class="card-header">
                    <img src="~/assets/img/emilyz.jpg" alt="...">
                </div>
                <div class="card-body">
                    <h4 class="card-title">@ViewBag.Email </h4>
                    <input type="hidden" asp-for="Email" value="@ViewBag.Email" />
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="tim-icons icon-key-25"></i>
                            </div>
                        </div>
                        <input asp-for="Password" class="form-control" placeholder="Password">
                    </div>

                    <div asp-validation-summary="All" class="text-danger"></div>

                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary btn-round btn-lg">Kilidini aç</button>
                </div>
            </div>
        </form>
    </div>
</div>

